{
  "name": "shared",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",

    "build:libs": "npm-run-all --sequential build:models build:utils build:store build:api build:animations build:dictionaries build:localizations build:common build:services build:directives build:pipes build:components build:assets",

    "build:models": "ng build @amarty/models",
    "build:utils": "ng build @amarty/utils",
    "build:store": "ng build @amarty/store",
    "build:api": "ng build @amarty/api",
    "build:animations": "ng build @amarty/animations",
    "build:common": "ng build @amarty/common",
    "build:components": "ng build @amarty/components",
    "build:dictionaries": "ng build @amarty/dictionaries",
    "build:localizations": "ng build @amarty/localizations",
    "build:directives": "ng build @amarty/directives",
    "build:pipes": "ng build @amarty/pipes",
    "build:services": "ng build @amarty/services",
    "build:assets": "ng build @amarty/assets",

    "pack:libs": "npm-run-all --sequential pack:models pack:utils pack:store pack:api pack:animations pack:common pack:components pack:dictionaries pack:localizations pack:directives pack:pipes pack:services pack:assets",

    "pack:models": "cd dist/amarty/models && npm pack",
    "pack:utils": "cd dist/amarty/utils && npm pack",
    "pack:store": "cd dist/amarty/store && npm pack",
    "pack:api": "cd dist/amarty/api && npm pack",
    "pack:animations": "cd dist/amarty/animations && npm pack",
    "pack:common": "cd dist/amarty/common && npm pack",
    "pack:components": "cd dist/amarty/components && npm pack",
    "pack:dictionaries": "cd dist/amarty/dictionaries && npm pack",
    "pack:localizations": "cd dist/amarty/localizations && npm pack",
    "pack:directives": "cd dist/amarty/directives && npm pack",
    "pack:pipes": "cd dist/amarty/pipes && npm pack",
    "pack:services": "cd dist/amarty/services && npm pack",
    "pack:assets": "cd dist/amarty/assets && npm pack",

    "build-and-pack:libs": "npm run build:libs && npm run pack:libs"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.2.0",
    "@angular/cdk": "^19.2.1",
    "@angular/common": "^19.2.0",
    "@angular/compiler": "^19.2.0",
    "@angular/core": "^19.2.0",
    "@angular/forms": "^19.2.0",
    "@angular/material": "^19.2.1",
    "@angular/platform-browser": "^19.2.0",
    "@angular/platform-browser-dynamic": "^19.2.0",
    "@angular/router": "^19.2.0",
    "@fortawesome/fontawesome-free": "^6.7.2",
    "@ngrx/store": "^19.0.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.0",
    "@angular/cli": "^19.2.0",
    "@angular/compiler-cli": "^19.2.0",
    "@types/jasmine": "~5.1.0",
    "jasmine-core": "~5.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^19.2.0",
    "npm-run-all": "^4.1.5",
    "typescript": "~5.7.2"
  }
}
